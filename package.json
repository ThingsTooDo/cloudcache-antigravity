{
  "name": "Cloudcache",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "typecheck": "pnpm -r typecheck",
    "format:check": "pnpm exec prettier -c .",
    "lint:quick": "pnpm exec eslint .",
    "prepare": "husky",
    "dev": "pnpm exec concurrently -n admin,apex,app -c blue,green,yellow \"pnpm --filter ./apps/admin dev\" \"pnpm --filter ./apps/apex dev\" \"pnpm --filter ./apps/app dev\"",
    "dev:admin": "pnpm --filter ./apps/admin dev",
    "dev:apex": "pnpm --filter ./apps/apex dev",
    "dev:app": "pnpm --filter ./apps/app dev",
    "deploy:staging:app": "bash scripts/modules/app/deploy-staging.sh staging",
    "deploy:staging:admin": "bash scripts/modules/admin/deploy-staging.sh staging",
    "deploy:staging:apex": "bash scripts/modules/apex/deploy-staging.sh staging",

    "verify:access": "bash scripts/access/verify.sh staging",
    "verify:ping": "bash scripts/verify/ping.sh staging",

    "shopify:scopes": "bash scripts/shopify/scopes-assert.sh",
    "cf:snapshot": "bash scripts/cf/inventory-snapshot.sh"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md,yml,yaml}": [
      "prettier --check"
    ],
    "*.{js,ts,tsx}": [
      "eslint --max-warnings=0"
    ],
    "*.sh": [
      "shfmt -d",
      "shellcheck -S warning"
    ]
  },
  "devDependencies": {
    "@cloudflare/unenv-preset": "^2.7.7",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "tsup": "^8.5.0",
    "wrangler": "^4.42.1",
    "concurrently": "^9.1.0"
  },
  "pnpm": {
    "overrides": {
      "wrangler": "4.42.1"
    }
  }
}
